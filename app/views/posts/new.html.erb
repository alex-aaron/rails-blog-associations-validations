<h1>New post</h1>
<%= form_for(@post) do |f| %>
    <%= f.label "Title" %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label "Content" %><br>
    <%= f.text_area :content %><br><br>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
    <%= f.submit %>
<% end %>
<%= link_to 'Back', posts_path %>
